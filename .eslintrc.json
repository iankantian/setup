{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle":[
            "error",
            "never"
        ],
        "no-unused-vars":
            ["warn", { "vars": "all", "args": "after-used" }],
        "no-console":[
            0
        ]
    }
}
